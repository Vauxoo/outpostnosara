<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_pos_orders" name="Show POS Orders" inherit_id="portal.portal_my_home" customize_show="True" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">POS Orders</t>
                <t t-set="url" t-value="'/my/pos_orders'" />
                <t t-set="placeholder_count" t-value="'pos_order_count'" />
            </t>
        </xpath>
    </template>
    <template id="portal_my_pos_orders" name="My POS Orders">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">POS Orders</t>
            </t>
            <t t-if="not orders">
                <p>There are currently no orders for your account.</p>
            </t>
            <t t-if="orders" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>Order Ref #</span>
                            <span class='d-block d-md-none'>Ref.</span>
                        </th>
                        <th class="text-right">Order Date</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <t t-foreach="orders" t-as="order">
                    <tr>
                        <td><a t-att-href="'/my/pos_orders/%s' % order.id"><t t-esc="order.name"/></a></td>
                        <td class="text-right">
                            <span t-field="order.date_order" t-options="{'widget': 'date'}"/>&amp;nbsp;
                            <span class='d-none d-md-inline' t-field="order.date_order" t-options="{'time_only': True}"/>
                        </td>
                        <td class="text-right"><span t-field="order.amount_total" t-options='{"widget": "monetary","display_currency": order.pricelist_id.currency_id}'/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="pos_order_total_table">
        <table class="table table-sm">
            <tr class="border-black">
                <td><strong>Taxes</strong></td>
                <td class="text-right">
                    <span
                        data-id="amount_tax"
                        t-field="pos_order.amount_tax"
                        t-options='{"widget": "monetary","display_currency": pos_order.pricelist_id.currency_id}'
                    />
                </td>
            </tr>
            <tr class="border-black">
                <td><strong>Total</strong></td>
                <td class="text-right">
                    <span data-id="total_amount" t-field="pos_order.amount_total" t-options='{"widget": "monetary", "display_currency": pos_order.pricelist_id.currency_id}'/>
                </td>
            </tr>
        </table>
    </template>

    <template id="portal_my_home_menu_pos_order" name="Portal layout : Pos Order" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'POS Orders'" t-attf-class="breadcrumb-item #{'active ' if not pos_order else ''}">
                <a t-if="pos_order" t-attf-href="/my/pos_orders?{{ keep_query() }}">POS Orders</a>
                <t t-else="">POS Orders</t>
            </li>
            <li t-if="pos_order" class="breadcrumb-item active">
                <t t-esc="pos_order.name"/>
            </li>
        </xpath>
    </template>

    <template id="pos_order_portal_content" name="Sales Order Portal Content">
        <!-- Intro -->
        <div id="introduction" class="pb-2 pt-3 card-header bg-white">
          <h2 class="my-0">
            <span>Order </span>
            <em t-esc="pos_order.name"/>
        </h2>
        </div>

        <div class="card-body">
            <!-- Informations -->
            <div id="informations">
                <div class="row" id="pos_date">
                    <div class="mb-3 col-6">
                        <strong>Order Date:</strong>
                        <span t-field="pos_order.date_order" t-options='{"widget": "date"}'/>
                    </div>
                </div>
                <div class="row" id="pos_client">
                    <div class="mb-3 col-6">
                        <strong>Name:</strong>
                        <span t-field="pos_order.partner_id.name"/>
                    </div>
                </div>
                <div class="row" id="pos_table">
                    <div class="mb-3 col-6">
                        <strong>Table:</strong>
                        <span t-field="pos_order.table_id.name"/>
                    </div>
                </div>
                <div class="row" id="pos_guest">
                    <div class="mb-3 col-6">
                        <strong>Guest:</strong>
                        <span t-field="pos_order.customer_count"/>
                    </div>
                </div>
            </div>

            <section id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Pricing</h3>
                <table t-att-data-order-id="pos_order.id" class="table table-sm" id="sales_order_table">
                    <thead class="bg-100">
                        <tr>
                            <th class="text-left">Products</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right d-none d-sm-table-cell">Unit Price</th>
                            <th class="text-right d-none d-sm-table-cell">
                                <span>Disc.%</span>
                            </th>
                            <th class="text-right" >
                                <span>Subtotal</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="pos_order.lines" t-as="line">
                            <tr class="bg-200 font-weight-bold o_line_section">
                                <td id="product_name"><span t-field="line.full_product_name"/></td>
                                <td class="text-right">
                                    <div id="quote_qty">
                                        <span t-field="line.qty"/>
                                        <span t-field="line.product_uom_id.name"/>
                                    </div>
                                </td>
                                <td class="text-right d-none d-sm-table-cell">
                                    <span t-field="line.price_unit" t-options='{"widget": "monetary","display_currency": pos_order.pricelist_id.currency_id}'/>
                                </td>
                                <td class="text-right d-none d-sm-table-cell">
                                    <div>
                                        <t t-esc="line.discount"  t-options='{"widget": "monetary","display_currency": pos_order.pricelist_id.currency_id}'/>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <span class="oe_order_line_price_subtotal" t-field="line.price_subtotal"  t-options='{"widget": "monetary","display_currency": pos_order.pricelist_id.currency_id}'/>
                                </td>
                            </tr>

                        </t>
                    </tbody>
                </table>

                <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                    <div class="col-sm-7 col-md-5 ml-auto">
                        <t t-call="website_point_of_sale.pos_order_total_table"/>
                    </div>
                </div>
            </section>

        </div>
    </template>

    <template id="portal_pos_orders_page" name="Pos Order Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-field="pos_order.amount_total" data-id="total_amount" t-options='{"widget": "monetary","display_currency": pos_order.pricelist_id.currency_id}'/>
                        </h2>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li t-if="pos_order.employee_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Cashier</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="pos_order.employee_id.image_1024" t-att-src="image_data_uri(pos_order.employee_id.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not pos_order.employee_id.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="pos_order.employee_id.name"/>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="quote_content" class="col-12 col-lg justify-content-end">
                    <!-- main content -->
                    <div class="card pb-5" id="portal_sale_content">
                        <div t-call="website_point_of_sale.pos_order_portal_content"/>
                    </div>

                </div>
            </div>
        </xpath>
    </template>

</odoo>
