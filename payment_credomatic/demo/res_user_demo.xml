<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
        <record id="partner_credomatic" model="res.partner">
            <field name="name">Mr Credomatic</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="email">credomatic@yourcompany.example.com</field>
            <field name="company_name">Vauxoo</field>
            <field name="street">Venustiano Carranza 1726</field>
            <field name="city">Colima</field>
            <field name="zip">28017</field>
            <field name="country_id" ref="base.mx"/>
        </record>

        <record id="user_credomatic" model="res.users">
            <field name="partner_id" ref="partner_credomatic"/>
            <field name="login">credomatic</field>
            <field name="password">credomatic</field>
            <field name="signature" type="xml"><span>-- <br/>+Mr Credomatic</span></field>
            <field name="company_id" ref="base.main_company"/>
            <field name="groups_id" eval="[(6,0,[ref('base.group_user'), ref('base.group_partner_manager'), ref('sales_team.group_sale_manager'),ref('account.group_account_invoice')])]"/>
            <field name="image_1920" type="base64" file="base/static/img/user_demo-image.jpg"/>
        </record>
</odoo>
