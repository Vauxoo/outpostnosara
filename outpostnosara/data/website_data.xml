<?xml version="1.0"?>
<odoo noupdate="1">

    <!-- Set Logo -->
    <record id="website.default_website" model="website">
        <field name="logo" type="base64" file="outpostnosara/static/img/logo.svg" />
        <field name="theme_id" ref="base.module_theme_nosara" />
        <field name="logo_url">https://outpostnosara.com</field>
    </record>

    <!-- Set Theme -->
    <function model="ir.module.module" name="_theme_load">
        <value eval="ref('base.module_theme_nosara')" />
        <value model="website" eval="obj(ref('website.default_website'))" />
    </function>

    <record id="menu_reservation" model="website.menu">
        <field name="name">Reservation</field>
        <field name="url">/outpost/reservation</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="group_ids" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
    </record>

</odoo>
