<?xml version="1.0"?>
<odoo>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="name">sale_subscription.form.outpostnosara</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_token_id']" position="after">
                <field name="room_type_id"/>
                <field name="folio_ids"/>
                <field name="pin"/>
            </xpath>
            <!-- Show taxes -->
            <xpath expr="//field[@name='recurring_total']" position="after">
                <field name="recurring_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                    <label for="recurring_total_incl"/>
                </div>
                <field name="recurring_total_incl" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="l10n_cr_edi_economic_activity_id" options='{"no_open": True, "no_create": True}' required="True"/>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_template_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
        <field name="name">sale_subscription_template.form.outpostnosara</field>
        <field name="model">sale.subscription.template</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="room_type_id"/>
            </xpath>
        </field>
    </record>

</odoo>

