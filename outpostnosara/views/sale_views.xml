<?xml version="1.0"?>
<odoo>
    <record id="sale_view_order_form_outpostnosara" model="ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="name">sale_order.form.outpostnosara</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="l10n_cr_edi_economic_activity_id" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '!=', 'draft')]}" required="True"/>
            </xpath>
        </field>
    </record>
</odoo>
