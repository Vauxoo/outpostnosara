<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pms_property_views_form_inherit" model="ir.ui.view">
        <field name="name">Property Form Inherit Form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='property_settings']" position="inside">
                <group string="WiFi">
                    <field name="wifi_name" />
                    <field name="wifi_password" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
