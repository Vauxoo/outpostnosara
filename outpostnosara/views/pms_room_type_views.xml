<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="room_type_view_form" model="ir.ui.view">
        <field name="name">pms.room_type.form</field>
        <field name="model">pms.room.type</field>
        <field name="inherit_id" ref="pms.pms_room_type_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Reservation Types" id='reservation_type'>
                    <separator string="Reservation Types" />
                    <field name="type_lines_ids">
                        <tree editable="bottom">
                            <field name="reservation_type_id" />
                            <field name="price" />
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="website_published"/>
                <field name="show_harmony"/>
            </xpath>
        </field>
    </record>
</odoo>
