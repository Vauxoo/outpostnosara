<?xml version="1.0"?>
<odoo>
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="name">res.partner.form.outpostnosara</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="is_harmony"  invisible="1"/>
                <button name="toggle_is_harmony"
                    type="object"
                     icon="fa-certificate"
                    attrs="{'invisible': [('is_harmony', '=', True)]}"
                    string="Set as Harmony"/>
                <button name="toggle_is_harmony"
                    type="object"
                    icon="fa-certificate"
                    attrs="{'invisible': [('is_harmony', '=', False)]}"
                    string="Is Harmony"/>
            </xpath>
            <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                <page string="Reservation Info" name="reservation_info" attrs="{'invisible': [('is_harmony', '=', False)]}">
                    <group string="Reservation Info" name="reservation_info">
                        <group>
                            <field name="pin"/>
                        </group>
                    </group>
                </page>
                <page string="Terms &amp; Conditions" name="terms_conditions">
                    <group string="Subscription Partner Terms &amp; Conditions" name="terms_conditions">
                        <group class="w-100">
                            <div class="o_row">
                                <field name="agree_charges_subscription_term"/>
                                <label for="agree_charges_subscription_term"/>
                            </div>
                        </group>
                        <group class="w-100 mt-0">
                            <div class="o_row">
                                <field name="one_year_subscription_term"/>
                                <label for="one_year_subscription_term"/>
                            </div>
                        </group>
                        <group class="w-100 mt-0">
                            <div class="o_row">
                                <field name="acknowledge_agreement_subscription_term"/>
                                <label for="acknowledge_agreement_subscription_term"/>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
