<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pms_lock_view_form">
        <field name="name">pms.lock.form</field>
        <field name="model">pms.lock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="slot_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="usercode"/>
                                    <button name="action_clear_user_code" type="object" string="Clear pin"/>
                                    <button name="action_set_user_code" type="object" string="Set pin"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pms_lock_view_tree">
        <field name="name">pms.lock.tree</field>
        <field name="model">pms.lock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="open_pms_lock_form_tree">
        <field name="name">Locks</field>
        <field name="res_model">pms.lock</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="Locks"
        id="menu_open_pms_lock_form_tree"
        action="open_pms_lock_form_tree"
        sequence="900"
        parent="pms.pms_configuration_menu"
    />
</odoo>
