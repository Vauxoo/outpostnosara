<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Assets frontend -->
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Assets frontend" priority="1">
        <!-- SCSS -->
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/outpostnosara/static/src/scss/main.scss" />
        </xpath>
        <!-- JS -->
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/outpostnosara/static/src/js/daterangepicker.js" />
            <script type="text/javascript" src="/outpostnosara/static/src/js/reservation_widget.js" />
            <script type="text/javascript" src="/outpostnosara/static/src/js/application_widget.js" />
            <script type="text/javascript" src="/outpostnosara/static/src/lib/jquery.validate.js" />
        </xpath>
    </template>

    <!-- Point of Sale Assets -->
    <template id="point_of_sale_assets" inherit_id="point_of_sale.assets" name="Point of Sale Assets">
        <!-- CSS -->
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/outpostnosara/static/src/css/pos_receipts.css" />
        </xpath>
    </template>

</odoo>
