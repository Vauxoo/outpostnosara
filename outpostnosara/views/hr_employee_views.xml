<?xml version="1.0"?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="name">hr_employee.form.outpostnosara</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='hr_presence_button']" position="before">
                <button name="activities_housekeeping" type="object" class="oe_stat_button" icon="fa-calendar">
                    <div class="o_stat_info">
                        <field name="housekeeping_task" class="o_stat_value"/>
                        <span class="o_stat_text">Housekeeping Task</span>
                    </div>
                </button>
                <button name="activities_maintenance" type="object" class="oe_stat_button" icon="fa-calendar">
                    <div class="o_stat_info">
                        <field name="maintenance_task" class="o_stat_value"/>
                        <span class="o_stat_text">Maintenance Task</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>


</odoo>

