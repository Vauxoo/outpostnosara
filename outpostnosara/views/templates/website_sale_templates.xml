<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="membership" name="Membership Application">
        <!-- <xpath expr="//t[@t-call='website.layout']" position="replace"> -->
            <t t-call="website.layout">
                <t t-set="additional_title">Shop - Select Payment Acquirer</t>
                <t t-set="no_footer" t-value="1"/>

                <div id="wrap">
                    <div class="container">
                        <form action="/shop/address" method="post" class="ou-membership">

                            <section class="js_personal_info">
                                <h4 class="" >Personal info</h4>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="firstname">Name</label>
                                        <input type="text" name="firstname" class="form-control "/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="lastname">Name</label>
                                        <input type="text" name="lastname" class="form-control "/>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="birthday">Birthday</label>
                                        <input type="date" name="birthday" class="form-control "/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="gender">Gender</label>
                                        <select id="gender" name="gender" class="form-control">
                                            <option>Choose</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                        </select>
                                    </div>
                                </div>
                            </section>

                            <section class="js_home_address">
                                <h4 class="" >Home address</h4>
                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <label class="col-form-label" for="street">Address</label>
                                        <input type="text" name="street" class="form-control "/>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="city">City</label>
                                        <input type="text" name="city" class="form-control "/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="birthday">State</label>
                                        <select name="state_id" data-init="1" class="form-control ">
                                            <option value="68">
                                                Armed Forces Americas
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="zip">ZIP</label>
                                        <input type="text" name="zip" class="form-control "/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="birthday">Country</label>
                                        <select id="country_id" name="country_id" class="form-control">
                                            <option value="3">
                                                Afghanistan
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </section>

                            <section class="js_contact">
                                <h4 class="" >Contact</h4>
                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <label class="col-form-label" for="email">Email address</label>
                                        <input type="email" name="email" class="form-control "/>
                                    </div>
                                    <div class="form-group col-12">
                                        <label class="col-form-label" for="emailc">Confirm email address</label>
                                        <input type="emailc" name="emailc" class="form-control "/>
                                    </div>
                                    <div class="form-group col-12">
                                        <label class="col-form-label" for="phone">Phone number</label>
                                        <input type="tel" name="phone" class="form-control "/>
                                    </div>
                                </div>
                            </section>

                            <section class="js_membership_type">
                                <h4 class="" >Membership type</h4>
                                <t t-foreach='memberships' t-as='membership'>
                                    <div class="form-row mx-0 my-2">
                                        <div class="form-group col-md-8" t-esc='membership.name'/>
                                        <div class="form-group col-md-4 text-md-right" >
                                            <span t-esc="membership.price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>/month
                                        </div>
                                    </div>
                                </t>
                                <div>
                                    All memberships provide access to all communal work and social spaces, wellness and productivity amenities and curated member events. Memberships allow for guests accompanied by members.
                                </div>
                            </section>
                        </form>
                    </div>
                </div>
            </t>
        <!-- </xpath> -->
    </template>
</odoo>
