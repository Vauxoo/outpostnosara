<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reservation" name="Reservation Page">
        <t t-call="website.layout">
            <t t-set="additional_title">Reservation Page</t>
            <t t-set="no_footer" t-value="1"/>

            <div id="wrap">
                <div class="container">
                    <form action="/shop/address" method="post" class="ou ou-reservation s_website_form2">

                        <section class="js_reservation">
                            <h4 class="" >Reservation</h4>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="room_type_id">Room Type</label>
                                    <select id="room_type_id" name="room_type_id" class="form-control">
                                        <t t-foreach='room_types' t-as='room_type'>
                                            <option t-att-value="room_type.id" t-esc='room_type.name'/>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="room_id">Room</label>
                                    <select id="room_id" name="room_id" class="form-control">
                                        <t t-foreach='room_ids' t-as='room'>
                                            <option t-att-value="room.id" t-esc='room.name'/>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-group col-12">
                                    <label class="col-form-label" for="reservation_type_id">Reservation Type</label>
                                    <select id="reservation_type_id" name="reservation_type_id" class="form-control">
                                        <option>Choose</option>
                                        <t t-foreach='reservation_types' t-as='reservation_type'>
                                            <option t-att-data-code="reservation_type.code" t-att-value="reservation_type.id" t-esc='reservation_type.name'/>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </section>
                        <section class="js_reservation_day d-none">
                            <h4 class="" >Daily</h4>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="checkin">Checkin</label>
                                    <input type="text" name="checkin" class="form-control ou-daterangepicker"/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="checkout">Checkout</label>
                                    <input type="text" name="checkout" class="form-control ou-daterangepicker"/>
                                </div>
                            </div>
                        </section>
                        <section class="js_reservation_hour d-none">
                            <h4 class="" >By hour</h4>
                            <div class="form-row">
                                <div class="form-group col-12">
                                    <label class="col-form-label" for="day">Day</label>
                                    <input type="text" name="day" data-singledatepicker='1' class="form-control ou-daterangepicker single"/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="checkin">Checkin</label>
                                    <input type="time" name="checkin" class="form-control" min="09:00" max="18:00"/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="checkout">Checkout</label>
                                    <input type="time" name="checkout" class="form-control" min="10:30" max="18:00"/>
                                </div>
                            </div>
                        </section>
                        <section class="js_reservation_half d-none">
                            <h4 class="" >1/2 Day</h4>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="day">Day</label>
                                    <input type="text" name="day" data-singledatepicker='1' class="form-control ou-daterangepicker single"/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label" for="checkin">Time</label>
                                    <select id="gender" name="type2" class="form-control">
                                        <option>Choose</option>
                                        <option t-att-value="1">Morning</option>
                                        <option t-att-value="2">Afternoon</option>
                                    </select>
                                </div>
                            </div>
                        </section>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
